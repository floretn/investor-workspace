<web-app version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemalocation=" http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>

  <welcome-file-list>
    <welcome-file>ru/mephi/iw/auth_pages/Auth.xhtml</welcome-file>
  </welcome-file-list>
  <locale-config>
    <default-locale>ru</default-locale>
    <supported-locale>ru</supported-locale>
    <supported-locale>en</supported-locale>
  </locale-config>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.FONT_AWESOME</param-name>
    <param-value>true</param-value>
  </context-param>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>ru.mephi.iw.ui.filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/ru/mephi/iw/auth_pages/Profile.xhtml</url-pattern>
    <url-pattern>/ru/mephi/iw/IMOEX/DownloadIMOEX.xhtml</url-pattern>
    <url-pattern>/ru/mephi/iw/settings/SafetySettings.xhtml</url-pattern>
    <url-pattern>/ru/mephi/iw/views/UsersView.xhtml</url-pattern>
    <url-pattern>/ru/mephi/iw/views/UserInfoChange.xhtml</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>PagesFilter</filter-name>
    <filter-class>ru.mephi.iw.ui.filters.PagesFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PagesFilter</filter-name>
    <url-pattern>/ru/mephi/iw/IMOEX/DownloadIMOEX.xhtml</url-pattern>
    <url-pattern>/ru/mephi/iw/views/UsersView.xhtml</url-pattern>
    <url-pattern>/ru/mephi/iw/views/UserInfoChange.xhtml</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>UICFilter</filter-name>
    <filter-class>ru.mephi.iw.ui.filters.UICFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UICFilter</filter-name>
    <url-pattern>/ru/mephi/iw/views/UserInfoChange.xhtml</url-pattern>
  </filter-mapping>
</web-app>

